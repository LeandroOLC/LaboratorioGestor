@model LaboratorioGestor.App.ViewModels.LaboratorioViewModel

@{
    ViewData["Title"] = "Cadastrar Laboratório";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Create">

            <vc:Summary></vc:Summary>

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Proprietario" class="control-label"></label>
                <input asp-for="Proprietario" class="form-control" />
                <span asp-validation-for="Proprietario" class="text-danger"></span>
            </div>

            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="TipoPessoa" class="control-label"></label><br />
                    <input type="radio" value="1" asp-for="TipoPessoa" checked /> Pessoa Física<br />
                    <input type="radio" value="2" asp-for="TipoPessoa" /> Pessoa Jurídica
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Documento" class="control-label"></label>
                    <input asp-for="Documento" class="form-control" />
                    <span asp-validation-for="Documento" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="TPO" class="control-label"></label>
                    <input asp-for="TPO" class="form-control" />
                    <span asp-validation-for="TPO" class="text-danger"></span>
                </div>
            </div>

            <h4>Endereço</h4>
            <hr />

            <partial name="_Endereco" />

            <h4>Contato</h4>
            <hr />

            <partial name="_Contato" />

            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
                <a class="btn btn-info" asp-action="Index">Voltar</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model LaboratorioGestor.App.ViewModels.ProteticoViewModel

@{
    ViewData["Title"] = "Cadastro de Protétio";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">

            <vc:Summary></vc:Summary>

            <div class="form-row">
                <div class="form-group col-md-7">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="CPF" class="control-label"></label>
                    <input asp-for="CPF" class="form-control" />
                    <span asp-validation-for="CPF" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="PercentualDaComissao" class="control-label"></label>
                    <input asp-for="PercentualDaComissao" class="form-control" />
                    <span asp-validation-for="PercentualDaComissao" class="text-danger"></span>
                </div>
            </div>

            <h4>Endereço</h4>
            <hr />

            <partial name="_Endereco" />

            <h4>Contato</h4>
            <hr />

            <partial name="_Contato" />

            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
                <a class="btn btn-info" asp-action="Index">Voltar</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
 
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

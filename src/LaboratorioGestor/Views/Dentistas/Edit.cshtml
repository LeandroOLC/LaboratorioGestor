@using LaboratorioGestor.App.Extensions
@model LaboratorioGestor.App.ViewModels.DentistaViewModel

@{
    ViewData["Title"] = "Editar Dentista";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit">

            <vc:Summary></vc:Summary>

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeDaClinica" class="control-label"></label>
                <input asp-for="NomeDaClinica" class="form-control" />
                <span asp-validation-for="NomeDaClinica" class="text-danger"></span>
            </div>

            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="TipoPessoa"></label>
                    <div>
                        <input type="radio" value="1" asp-for="TipoPessoa" checked="@(Model.TipoPessoa == 1)" /> Pessoa Física <br />
                        <input type="radio" value="2" asp-for="TipoPessoa" checked="@(Model.TipoPessoa == 2)" /> Pessoa Jurídica
                    </div>
                    <div>
                        &nbsp;
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Documento" class="control-label"></label>
                    <input asp-for="Documento" class="form-control" />
                    <span asp-validation-for="Documento" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="CRO" class="control-label"></label>
                    <input asp-for="CRO" class="form-control" />
                    <span asp-validation-for="CRO" class="text-danger"></span>
                </div>
            </div>

            <h4>Endereço</h4>
            <hr />

            <partial name="_Endereco" />

            <h4>Contato</h4>
            <hr />

            <partial name="_Contato" />

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a class="btn btn-info" asp-action="Index">Voltar</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
